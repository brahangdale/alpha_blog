<%= render 'shared/errors', obj: @user %>

<div class='row'>

	<div class='col-xs-12'>

		<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>

		<div class="form-group">

			<div class="control-label col-sm-2">

				<%= f.label :username %>

			</div>

			<div class="col-sm-8">

				<%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>

			</div>

		</div>

		<div class="form-group">

			<div class="control-label col-sm-2">

				<%= f.label :email %>

			</div>

			<div class="col-sm-8">

				<%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>

			</div>

		</div>

		<div class="form-group">

			<div class="control-label col-sm-2">

				<%= f.label :password %>

			</div>

			<div class="col-sm-8">

				<%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>

			</div>

		</div>
		<%= f.fields_for :user_profile do |builder| %>
			<div class="form-group">

				<div class="control-label col-sm-2">

					<%= builder.label :dob %>

				</div>

				<div class="col-sm-8">

					<%= builder.text_field :dob, class: "form-control", placeholder: "Enter date of birth" %>

				</div>

			</div>


			<div class="form-group">

				<div class="control-label col-sm-2">

					<%= builder.label :phone_number %>

				</div>

				<div class="col-sm-8">

					<%= builder.text_field :phone_number, class: "form-control", placeholder: "Enter Phone Number" %>

				</div>

			</div>


			<div class="form-group">

				<div class="control-label col-sm-2">

					<%= builder.label :country %>

				</div>
				<div class="col-sm-8">

					<%= builder.select :country, options_for_select( [ ['India', 'india'], ['United State', 'united state']], selected: builder.object.country || 'united state'), {}, { class: "form-control", placeholder: "Enter date of birth" } %>

				</div>

			</div>
		<% end %>



		<div class="form-group">

			<div class="col-sm-offset-2 col-sm-10">

				<%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: 'btn btn-primary btn-lg') %>

			</div>

		</div>

		<% end %>

		<div class="col-xs-4 col-xs-offset-4">

			[ <%= link_to "Cancel request and return to articles listing", articles_path %> ]

		</div>

	</div>

</div>

